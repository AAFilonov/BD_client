<Window x:Class="BD_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD_client"
        mc:Ignorable="d"
        Title="БД Интернет-провайдер" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <local:MyBDDataSet x:Key="myBDDataSet"/>
        <CollectionViewSource x:Key="type_ClViewSource" Source="{Binding Type_Cl, Source={StaticResource myBDDataSet}}"/>
        <CollectionViewSource x:Key="clientViewSource" Source="{Binding Client, Source={StaticResource myBDDataSet}}"/>
        <CollectionViewSource x:Key="сontract_tableViewSource" Source="{Binding Сontract_table, Source={StaticResource myBDDataSet}}"/>
