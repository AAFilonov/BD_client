        <CollectionViewSource x:Key="adressViewSource" Source="{Binding Adress, Source={StaticResource myBDDataSet}}"/>
        <CollectionViewSource x:Key="regionViewSource" Source="{Binding Region, Source={StaticResource myBDDataSet}}"/>
        <CollectionViewSource x:Key="view_Client_ServicesViewSource" Source="{Binding View_Client_Services, Source={StaticResource myBDDataSet}}"/>
