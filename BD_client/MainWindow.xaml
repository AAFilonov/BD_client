        <CollectionViewSource x:Key="tv_bundle_channelViewSource" Source="{Binding Tv_bundle_channel, Source={StaticResource myBDDataSet}}"/>
        <CollectionViewSource x:Key="tv_Service_bundleViewSource" Source="{Binding Tv_Service_bundle, Source={StaticResource myBDDataSet}}"/>
