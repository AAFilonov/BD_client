<Window x:Class="BD_client.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BD_client"
        mc:Ignorable="d"
        Title="WindowLogin" Height="450" Width="800" >
    <Grid x:Name="root">
        <StackPanel Width="300"  HorizontalAlignment="Center" Margin="246,189,246,41" >

            <Label HorizontalAlignment="Center">Логин</Label>
            <TextBox x:Name="texBoxLogin" Margin="4" Height="25" Text="" />
            <Label HorizontalAlignment="Center">Пароль:</Label>
            <PasswordBox x:Name="PasswordBox"   Height="25" Margin="4"/>
            <Button x:Name="ClientDelete" Width="150" VerticalAlignment="Bottom" Content="Войти" Margin="2 10 2 0 "  Click="LoginTry"></Button>

        </StackPanel>



    </Grid>
</Window>
